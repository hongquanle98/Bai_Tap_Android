<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng hai số"
            android:textColor="#E91E63"
            android:textSize="25dp"
            android:textStyle="bold|italic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số a:"/>
        <EditText
            android:id="@+id/edANumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số b:"/>
        <EditText
            android:id="@+id/edBNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnTong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tổng"/>
        <Button
            android:id="@+id/btnXoaTrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xoá trắng"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
</LinearLayout>
